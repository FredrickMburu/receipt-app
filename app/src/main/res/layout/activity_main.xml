<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_gravity="center"
    android:layout_height="wrap_content"
    tools:context=".MainActivity"
    >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="15dp"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="40dp"
            android:gravity="top"
            >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/item"
                android:textStyle="bold"
                android:layout_marginStart="15dp"
                android:textSize="15sp"
                android:textFontWeight="@integer/material_motion_duration_long_2"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/price"
                android:textStyle="bold"
                android:layout_marginStart="35dp"
                android:textSize="15sp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/vat"
                android:textStyle="bold"
                android:layout_marginStart="45dp"
                android:textSize="15sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/actual_price"
                android:textSize="15sp"
                android:layout_marginStart="5dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/milk_button"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:text="@string/milk"
                android:backgroundTint="@color/lightBlue"
                />

            <TextView
                android:id="@+id/milkPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/milkVat"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/milkActualPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/sugar_button"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:text="@string/sugar"
                android:backgroundTint="@color/lightBlue"
                />

            <TextView
                android:id="@+id/sugarPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/sugarVat"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/sugarActualPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/flour_button"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:text="@string/flour"
                android:backgroundTint="@color/lightBlue"
                />

            <TextView
                android:id="@+id/flourPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/flourVat"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/flourActualPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >
            <Button
                android:id="@+id/bread_button"
                android:layout_width="95dp"
                android:layout_height="48dp"
                android:text="@string/bread"
                android:backgroundTint="@color/lightBlue"
                />

            <TextView
                android:id="@+id/breadPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/breadVat"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />

            <TextView
                android:id="@+id/breadActualPrice"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_weight="1"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textAlignment="center"
                android:textStyle="bold"
                android:background="@drawable/textbox"
                android:text="@string/grand_total"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/grandTotal"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:textAlignment="center"
                android:background="@drawable/textbox"
                android:text="@string/discount"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/discount"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:orientation="horizontal"
            >
            <TextView
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:padding="8dp"
                android:textAlignment="center"
                android:layout_margin="10dp"
                android:textStyle="bold"
                android:background="@drawable/textbox"
                android:text="@string/net_pay"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/netPay"
                android:layout_width="match_parent"
                android:layout_height="27dp"
                android:background="@drawable/textview_box"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>